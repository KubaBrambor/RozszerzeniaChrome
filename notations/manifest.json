{
    "name": "Notification Extension",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": [
        "storage",
        "notifications",
        "alarms",
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": ["content.js"]
      }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "manifest_version": 2
  }