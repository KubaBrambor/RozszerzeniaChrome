{
    "name": "Notification Extension",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": [
      "management", 
      "tabs", 
      "storage",  
      "<all_urls>",
      "identity",
      "notifications", 
      "alarms"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [ {
      "all_frames": true,
      "js": [ "content.js"],
      "run_at": "document_end",
      "matches": [
        "<all_urls>"
      ]
     }],
    "manifest_version": 2
  }


 

    